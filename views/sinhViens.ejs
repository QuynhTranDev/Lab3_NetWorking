<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documents</title>
</head>
<body>
    <h1>Sinh Viên Data</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% sinhViens.forEach(function(sinhVien){ %>
            <tr>
                <td><%= sinhVien.id %></td>
                <td><%= sinhVien.name %></td>
                <td>
                    <a href="/sinhvien/edit/<%= sinhVien._id %>">Edit</a>
                    <form action="/sinhvien/delete/<%= sinhVien._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<!-- kiểm tra xem biến sinhVienToEdit có tồn tại hay không. -->
    <% if (sinhVienToEdit) { %>
    <h2>Sửa Sinh Viên</h2>
    <form action="/sinhvien/edit/<%= sinhVienToEdit._id %>" method="POST">
        <label for="id">ID:</label>
        <input type="text" id="id" name="id" value="<%= sinhVienToEdit.id %>" required><br><br>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= sinhVienToEdit.name %>" required><br><br>
        <input type="submit" value="Sửa Sinh Viên">
    </form>

<!-- Nếu sinhVienToEdit không tồn tại, hiển thị form thêm sinh viên -->
    <% }  else { %>
    <h2>Thêm Sinh Viên</h2>
    <form action="/sinhvien" method="POST">
        <label for="id">ID:</label>
        <input type="text" id="id" name="id" required><br><br>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>
        <input type="submit" value="Thêm Sinh Viên">
    </form>
    <% } %>
</body>
</html>
